<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text_view_border"
    style="@style/list_spacing">

    <TextView
        android:id="@+id/delivery_list_item_num_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:text="Num"
        android:tag="Recycler num"
        />
    <TextView
        android:id="@+id/delivery_list_item_price_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        tools:text="Delivery Price"
        android:tag="Recycler price"
        />
    <TextView
        android:id="@+id/delivery_list_item_tip_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        tools:text="Delivery Tip"
        android:tag="Recycler tip"
        />
    <CheckBox
        android:id="@+id/delivery_list_item_local_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:clickable="false"
        android:tag="Recycler local"
        />

</LinearLayout>